<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.roktim.controller.RegistrationController"
            stylesheets="@../../../css/styles.css">

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox alignment="TOP_CENTER" spacing="20" styleClass="registration-container">
                <padding>
                    <Insets top="30" right="50" bottom="30" left="50"/>
                </padding>

                <!-- Header -->
                <VBox alignment="CENTER" spacing="10">
                    <Text text="Donor Registration" styleClass="page-title">
                        <font>
                            <Font name="System Bold" size="28"/>
                        </font>
                    </Text>
                    <Text text="Join us in saving lives" styleClass="subtitle"/>
                </VBox>

                <!-- Registration Form -->
                <GridPane hgap="20" vgap="15" styleClass="form-grid">
                    <padding>
                        <Insets top="20" right="40" bottom="20" left="40"/>
                    </padding>

                    <!-- Name -->
                    <Label text="Full Name *" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
                    <TextField fx:id="nameField" promptText="Enter full name" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="form-field"/>

                    <!-- Blood Group -->
                    <Label text="Blood Group *" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
                    <ComboBox fx:id="bloodGroupCombo" promptText="Select blood group" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="form-field" prefWidth="200"/>

                    <!-- Phone -->
                    <Label text="Phone Number *" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label"/>
                    <TextField fx:id="phoneField" promptText="01XXXXXXXXX" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="form-field"/>

                    <!-- Email -->
                    <Label text="Email *" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="form-label"/>
                    <TextField fx:id="emailField" promptText="your@email.com" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="form-field"/>

                    <!-- Address -->
                    <Label text="Address *" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="form-label"/>
                    <TextArea fx:id="addressArea" promptText="Enter full address" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="form-field" prefRowCount="3"/>

                    <!-- Username -->
                    <Label text="Username *" GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="form-label"/>
                    <TextField fx:id="usernameField" promptText="Choose username" GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="form-field"/>

                    <!-- Password -->
                    <Label text="Password *" GridPane.columnIndex="0" GridPane.rowIndex="6" styleClass="form-label"/>
                    <PasswordField fx:id="passwordField" promptText="At least 8 characters" GridPane.columnIndex="1" GridPane.rowIndex="6" styleClass="form-field"/>

                    <!-- Confirm Password -->
                    <Label text="Confirm Password *" GridPane.columnIndex="0" GridPane.rowIndex="7" styleClass="form-label"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password" GridPane.columnIndex="1" GridPane.rowIndex="7" styleClass="form-field"/>

                    <!-- Profile Picture -->
                    <Label text="Profile Picture" GridPane.columnIndex="0" GridPane.rowIndex="8" styleClass="form-label"/>
                    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="8" alignment="CENTER_LEFT">
                        <Button fx:id="uploadButton" text="Choose Image" onAction="#handleImageUpload" styleClass="secondary-button"/>
                        <Label fx:id="imageLabel" text="No image selected" styleClass="info-label"/>
                    </HBox>
                </GridPane>

                <!-- Error Message -->
                <Label fx:id="errorLabel" styleClass="error-label" visible="false" wrapText="true" maxWidth="400"/>

                <!-- Buttons -->
                <HBox alignment="CENTER" spacing="20">
                    <Button text="Register" onAction="#handleRegister" styleClass="primary-button" prefWidth="150" prefHeight="40">
                        <font>
                            <Font name="System Bold" size="14"/>
                        </font>
                    </Button>
                    <Button text="Back to Login" onAction="#handleBackToLogin" styleClass="secondary-button" prefWidth="150" prefHeight="40">
                        <font>
                            <Font size="14"/>
                        </font>
                    </Button>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>